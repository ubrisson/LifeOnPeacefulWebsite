<aside class="mr-12 w-full max-w-xs text-left mt-32">
  <h1 class="text-sm font-bold uppercase py-2
     tracking-wide border-b border-gray-400 w-full">Browse by tag </h1>
  <ul class="mt-4 mx-4" style="columns: 2">
    <% @tags.each do |tag| %>
      <li class="list-none">
        <%= link_to "#{tag}", "/#{controller_name}?tag=#{tag}",
                    title: "All #{tag} #{controller_name}",
                    class: "text-xs text-blue-600 mt-1" %>
      </li>
    <% end %>
  </ul>
</aside>
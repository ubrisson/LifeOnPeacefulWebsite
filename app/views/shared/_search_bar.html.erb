<%= form_with url: send("#{controller_name}_path"), method: :get, local: true,
              class: "my-4 flex rounded bg-primary border border-primary hover:border-secondary" do |form| %>
  <%= form.search_field :q, placeholder: "Search #{controller_name}",
                        style: "margin-right: 0.15rem;",
                        class: "bg-primary flex-grow py-1 px-3 appearance-none rounded-l
                        focus:outline-none focus:shadow-outline" %>
  <%= form.submit "\u{1F50D}", name: nil, title: "Search #{controller_name}",
                  class: 'bg-primary text-lg py-1 px-3 rounded-r
                  hover:bg-secondary
                  focus:outline-none focus:shadow-outline ' %>
<% end %>
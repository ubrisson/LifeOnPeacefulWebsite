<article class="my-3 py-6 px-6 max-w-xl mx-auto border bg-white rounded shadow border-gray-400">
  <%= form_with(model: comment) do |form| %>

    <%= hidden_field_tag(:post_id, comment.post.id) %>
    <%= form.hidden_field :public, value: 0 %>

    <%= form.label(:body, "Comment", class: "block font-bold my-2 leading-none") %>
    <%= form.text_area :body, placeholder: 'Your comment...', required: "required",
                       class: "my-3 w-full bg-gray-200 text-blue-900
                      focus:bg-white py-1 px-2 rounded
                      shadow-inner border-gray-400 border" %>

    <div class="flex justify-center">
      <%= form.label(:name, 'Name:', class: "block mx-2 my-auto font-bold leading-none") %>
      <%= form.text_field :name, placeholder: '(Optional)',
                          class: "mx-2 my-auto text-sm bg-gray-200 text-blue-900
                      focus:bg-white py-1 px-2 rounded
                      shadow-inner border-gray-400 border" %>

      <%= form.submit "Comment",
                      class: 'my-auto mx-10 text-gray-600 text-xs uppercase font-bold
                  py-2 px-2 bg-white rounded border border-gray-400
                  hover:bg-indigo-100 hover:text-blue-600 hover:border-blue-400
                  focus:outline-none focus:shadow-outline' %>
    </div>
  <% end %>


</article>
<% provide(:title, "New content") %>

<main>
  <hgroup>
    <h1>New content</h1>
  </hgroup>

  <section class="max-w-lg mx-auto">
    <%= form_with(model: @content, url: contents_new_path) do |f| %>
      <%= f.radio_button(:type, "post") %>
      <%= f.label(:type_post, :Post) %>
      <%= f.radio_button(:type, "quote") %>
      <%= f.label(:type_quote, :Quote) %>
      <%= f.label :title, class: "block text-gray-700 text-lg font-bold mb-2" %>
      <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= f.label :content, class: "block text-gray-700 text-lg font-bold mb-2 mt-4" %>
      <%= f.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= f.submit "Create", class: 'bg-blue-900 hover:bg-blue-700 text-white font-bold my-2 py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:cursor-pointer' %>


    <% end %>
  </section>

</main>

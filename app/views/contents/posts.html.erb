<% provide(:title, 'All Posts') %>

<main>
  <hgroup>
    <h1>Posts</h1>
    <h2 class="text-gray-700">Posts and notes on anything and everything</h2>
  </hgroup>

  <%= will_paginate %>
  <ul class="posts">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </ul>
  <%= will_paginate %>
</main>
<% provide(:title, 'All contents') %>

<main class="mt-16 pb-8 w-full max-w-5xl mx-auto
    @apply bg-transparent text-left shadow-none border-0;">

  <h1> All contents </h1>
  <a href="#posts" data-turbolinks="false"> Posts</a>
  <a href="#quotes" data-turbolinks="false"> Quotes</a>
  <a href="#resources" data-turbolinks="false"> Resources</a>

  <div class="pt-6 ">

    <section id="posts">
    <h2 class="leading-none text-2xl w-full my-3"> Posts </h2>
    <ul style="columns: 2" class="mb-12">
      <% @posts.each do |post| %>
        <li id="<%= post.id %>">

          <article class="mb-3 mr-12 pb-4 border-b border-gray-400 text-left">
            <%= link_to post.title, post_path(post), title: post_path(post),
                        class: "text-2xl mr-auto leading-tight inline-block
                        mt-auto text-blue-700 no-underline hover:underline" %>
            <span class="block my-2 text-xs">
              <%= time_tag(post.created_at, format: "%B %d, %Y") %> -
              <%= "#{((post.body.to_s.split.count)./ 170.0).ceil} minutes read" %>
            </span>
            <%= render "shared/tag_list", content: post %>
          </article>

        </li>
      <% end %>
    </ul>
    </section>

    <section>
      <h2 id="resources" class="leading-none text-2xl  w-full my-3"> Resources </h2>
      <ul style="columns: 2">
      <% @resources.each do |resource| %>
          <li id="<%= resource.id %>">

            <article class="mb-3 pb-4 border-b border-gray-400">
              <%= link_to resource.title, resource.link, title: resource.link,
                          target: '_blank',
                          class: "text-xl mr-auto leading-tight inline-block
                        mt-auto text-blue-700 no-underline hover:underline" %>
              <cite class="block my-2 font-bold leading-none"> &#8213; <%= resource.author %>
                <% unless resource.publication.nil? %>
                  on <%= time_tag(resource.publication) %>
                <% end %>
              </cite>
              <%= render "shared/tag_list", content: resource %>
            </article>

          </li>
        <% end %>
      </ul>
    </section>
  </div>

    <section>
      <h2 id="quotes" class="leading-none text2-xl w-full my-3"> Quotes </h2>

    <ul style="columns: 2">
      <% @quotes.each do |quote| %>
        <li id="<%= quote.id %>">

          <article class="mb-3 pb-4 border-b border-gray-400">
            <blockquote class="my-3">
              <p class="font-serif leading-tight text-lg">
                “<%= raw quote.body %>”
              </p>
              <footer class="mt-3 font-bold leading-none">
                &#8213; <%= quote.author %>, in <cite> <%= quote.source %></cite>
              </footer>
            </blockquote>
            <%= render "shared/tag_list", content: quote %>
          </article>

        </li>
      <% end %>
    </ul>
    </section>


</main>
<header class="fixed w-full lg:min-w-1/10 lg:w-auto bg-gray-900 lg:inset-y-0 top-0 lg:flex lg:justify-center flex-col ">
  <nav class="lg:rounded-r-lg z-10 text-left">
    <ul class="px-6 flex flex-wrap lg:flex-col justify-between flex-row">
      <li class="py-2 px-1 list-none">
        <%= link_to "Home", root_path,
                    class: "hover-underline-animation text-gray-100 font-semibold no-underline py-3 lg:py-2 leading-none" %>
      </li>

      <li class="py-2 px-1 list-none">
        <%= link_to "Posts", posts_path,
                    class: "hover-underline-animation text-gray-100 font-semibold no-underline py-3 lg:py-2 leading-none" %>
      </li>

      <li class="py-2 px-1 list-none">
        <%= link_to "Quotes", quotes_path,
                    class: "hover-underline-animation text-gray-100 font-semibold no-underline py-3 lg:py-2 leading-none" %>
      </li>

      <li class="py-2 px-1 list-none">
        <%= link_to "Resources", resources_path,
                    class: "hover-underline-animation text-gray-100 font-semibold no-underline py-3 lg:py-2 leading-none" %>
      </li>

      <li class="py-2 px-1 list-none">
        <%= link_to "Resume", resume_path,
                    class: "hover-underline-animation text-gray-100 font-semibold no-underline py-3 lg:py-2 leading-none" %>
      </li>

      <li class="fixed bottom-0 lg:top-0 right-0 list-none ">
        <% if logged_in? %>

          <%= link_to "Log out", logout_path, method: :delete,
                      class: "text-blue-900 opacity-50 no-underline bg-gray-200 rounded-bl-lg
                    pl-4 pr-3 pt-2 pb-3 font-semibold hover:opacity-100 hover:underline shadow" %>
        <% else %>
          <%= link_to "Private access", login_path,
                      class: "text-transparent no-underline hover:bg-gray-700 rounded-bl-lg
                    pl-4 pr-3 pt-2 pb-3 hover:text-gray-100 font-semibold" %>
        <% end %>
      </li>
    </ul>
  </nav>
</header>
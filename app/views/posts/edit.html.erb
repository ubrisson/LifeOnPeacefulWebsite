<% provide(:title, "Edit post: #{@post.title}") %>
<% provide(:button_text, 'Edit') %>

<main class="mt-12 lg:mt-6 pb-8 w-full max-w-2xl mx-auto w-full text-center px-4 bg-transparent text-left shadow-none border-0">
  <hgroup class="pb-0">
    <h1>Posts</h1>
    <h2>Edit post: <%= @post.title %></h2>
  </hgroup>
  <section class="my-3 mx-auto bg-white border border-gray-400 rounded py-4">
    <%= render 'form' %>
  </section>
  <%= link_to 'Show', @post %> |
  <%= link_to 'Back', posts_path %>
</main>
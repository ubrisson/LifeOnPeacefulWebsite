<% provide(:title, 'Posts') %>
<% provide(:button_text, 'Create') %>

<main class="mt-12 lg:mt-6 pb-8 w-full max-w-2xl mx-auto w-full px-4 bg-transparent text-left shadow-none border-0">
  <h1>Posts</h1>

  <%= render 'shared/new_content' %>
  <%= render 'shared/search_bar' %>

  <span class="text-sm">
      <%= page_entries_info model: 'post' %>
    <%= raw search_result_message %>
    </span>

  <%= will_paginate %>

  <ul class="posts">
    <%= render @posts %>
  </ul>
  <%= will_paginate %>
  <%= page_entries_info @posts %>
  <%= render 'shared/import_export' %>

</main>
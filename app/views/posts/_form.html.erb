<%= form_with(model: @post, local: true, class: "px-8 pt-3 pb-8 text-left text-blue-900 ") do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form.label(:title, class: "block font-bold mb-2 mt-3 leading-none") %>
  <%= form.text_field :title, required: "required",
                      class: "w-full bg-gray-200 text-blue-900
                      focus:bg-white py-1 px-2 rounded mb-4 mt-1
                      shadow-inner border-gray-400 border" %>

    <%= form.label :body, class: "block font-bold mb-2 mt-3 leading-none" %>
    <%= form.rich_text_area :body, class: "w-full bg-gray-200 text-blue-900
                      focus:bg-white py-1 px-2 rounded mb-4 mt-1
                      shadow-inner border-gray-400 border" %>

  <%= form.label(:tag_list, "Tags", class: "block font-bold mb-2 mt-3 leading-none") %>
  <%= form.text_field :tag_list, value: @post.form_tags,
                      class: "w-full bg-gray-200 text-blue-900
                      focus:bg-white py-1 px-2 rounded mb-4
                      shadow-inner border-gray-400 border" %>

  <div class="flex mt-2">
    <%= form.label(:public,
                   class: "block font-bold mb-2 mt-3 leading-none") %>
    <%= form.check_box :public, class: "m-2" %>
  </div>

  <div class="text-center">
    <%= form.submit yield(:button_text),
                    class: 'text-gray-600 cursor-pointer
                  text-sm uppercase font-bold
                  mt-2 py-2 px-4 bg-white
                  rounded border border-gray-400 shadow
                  hover:bg-indigo-100 hover:text-blue-600 hover:border-blue-400
                  focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>

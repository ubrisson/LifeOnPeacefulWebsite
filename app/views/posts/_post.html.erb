<li id="<%= post.id %>" class="list-none">
  <article class="w-full pt-6">

    <div class="flex">
      <%= link_to post.title, post_path(post), title: post_path(post),
                  class: "font-semibold text-gray-800 text-3xl mr-auto leading-none
                  no-underline
                  inline-block mt-auto hover:underline hover:text-gray-900" %>

      <%= render "shared/action_links", content: post %>
    </div>

    <div class="py-4 text-lg font-normal text-gray-700">
    <%= post.body %>
    </div>

    <%= render "shared/tag_list", content: post %>

    <span class="text-right text-xs mt-2">
      Posted on <%= time_tag(post.created_at) %>.
    </span>
    <span class="text-right text-xs mt-2">
      Last updated on <%= time_tag(post.updated_at) %>.
    </span>
  </article>
</li>